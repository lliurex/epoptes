#!/bin/sh 
set -e

# It seems that dh_installinit doesn't remove the upstart symlinks :(
# We won't be needing that in the future, it's only for the upstart =>
# sysvinit migration.

if [ "$1" = install ] || [ "$1" = upgrade ]; then
    test -h /etc/init.d/epoptes && rm -f /etc/init.d/epoptes
    rm -f /etc/init/epoptes.conf
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#
